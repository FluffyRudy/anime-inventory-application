<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Genre</title>
    <link rel="stylesheet" href="css/addGenre.css">
    <link rel="stylesheet" href="css/header.css">
  </head>
  <body>
    <%- include("./partials/header.ejs")  %> 
    <h1 style="text-align: center;">Add Anime Genre</h1>
    <%- include('./partials/errors.ejs') %>
    <form action="/add-genre" method="post">
      <div>
        <label for="genre">Genre:</label>
        <input
          type="text"
          id="genre"
          name="genre"
          value="<%= locals.value || '' %>"
        />
      </div>
      <button type="submit">Add Genre</button>
    </form>
    <div>
      <h2>Available Genres</h2>
      <ul class="avilable-genre">
        <% locals.avilableGenres.forEach(genre => { %>
        <li style="text-transform: capitalize"><%= genre %></li>
        <% }) %>
      </ul>
    </div>
  </body>
  <script src="/js/listAnime.js"></script>
</html>
